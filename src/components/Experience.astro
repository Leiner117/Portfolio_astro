---
import Section from './Section.astro';
import {work} from "@cv";
---

<Section title="Experience">
    <ul>
        {
            work.map(({ name, startDate, endDate, position, summary }) => {
                const startYear = new Date(startDate).getFullYear();
                const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                const startMonth = monthNames[new Date(startDate).getMonth()];
                const year = endDate 
                    ? `${startMonth} ${startYear} - ${monthNames[new Date(endDate).getMonth()]} ${new Date(endDate).getFullYear()}`
                    : `${startMonth} ${startYear} - Present`

                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{name}</h3>
                                    <p>{position}</p>
                                </div>
                                <time>{year}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;

    }
    article h3{
        font-weight: 500;
        color: #111;

    }
    article h4{
        color: #222;
        font-weight: 400;
        
    }

    header{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        color: #888;
        font-size: 0.85rem;
    }
    @media (prefers-color-scheme: dark){
        article h3{
            color: #fff;
        }
        article h4{
            color: #ddd;
        }
        time {
            color: #aaa;
        }
    }
</style>